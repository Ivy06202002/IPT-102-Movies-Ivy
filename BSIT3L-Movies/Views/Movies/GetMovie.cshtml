<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #000;
   
        }

        h2 {
           text-align: center;
            color: #f8f6f6;
        }

        p {
            margin: 10px 0;
            color: #f8f6f6;
        }

        .movie-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #000;
        }

        .movie-details {
           display: flex;
    align-items: center;
    
        }

        .movie-details img {
           max-width: 100%;
            height: auto;
            box-shadow: 4px 4px 10px rgba(148, 144, 144, 0.5); 

        }

          .details {
            color: #fff;
           
            padding-top: 30px;
          
          
        }

        .button-container {
            text-align: center;
            margin-top: 10px;
        }

        .button {
            background-color: #E50914; /* Netflix Red */
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
        }

        .button:hover {
            background-color: #B40611; /* Darker Red on hover */
        }
    </style>
    <title>Movie</title>
</head>
<body>
        <div class="movie-details">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


            <div class="movie-image">
                <br><br>
                <br><br>
                <img src="@Url.Content(Model.Imgg)" alt="Movie Poster" />
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <div class="details">
                <h2>Movie Details</h2>
                <br>
                <p>Movie ID: @Model.Id</p>
                <p>Movie Name: @Model.Name</p>
                <p>Rating: @Model.Rating</p>
                <p>Release Year: @Model.ReleaseYear</p>
                <p>Genre: @Model.Genre</p>
            </div>
               </div>
        </div>
            <div class="button-container">
                <a href="@Model.Vidd" target="_blank" class="button">Watch Trailer</a>
</div>
</body>
</html>
